<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_file_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MenuActivity" >

    <TextView
        android:id="@+id/textview_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textIsSelectable="false"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_contact_name"
        android:layout_below="@+id/textview_contact_name"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textIsSelectable="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_phone"
        android:layout_below="@+id/textView_phone"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textIsSelectable="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_phone"
        android:layout_below="@+id/textView_email"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textIsSelectable="false"
        android:textSize="14sp" />

</RelativeLayout>