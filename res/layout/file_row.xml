<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_file_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MenuActivity" >

    <TextView
        android:id="@+id/textview_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textIsSelectable="false"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_file_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_file_name"
        android:text="@android:string/untitled"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textIsSelectable="false"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/textview_file_name"
        android:layout_alignTop="@+id/textview_file_name"
        android:layout_margin="4dp"
        android:padding="1dp" />

</RelativeLayout>